@page
@model TimeBlockPlanner.Pages.SignInModel
@{
    ViewData["Title"] = "Sign-In";
}
<h1>@ViewData["Title"]</h1>

@* <p>This page will be used for existing users to sign-in</p> *@
<hr/>

<div id="loginForm">
    <form id="login" method="post">
        <label for="username">Username:</label>
        <input type="text" asp-for="SignInUser.username" class="form-control" />
        <span class="text-danger" asp-validation-for="SignInUser.username"></span>
        <br />
        <label for="password">Password:</label>
        <input type="text" asp-for="SignInUser.password" class="form-control" />
        <span class="text-danger" asp-validation-for="SignInUser.password"></span>
        <br />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

<div>
    <hr/>
    <p>Don't have an account yet?</p>
    <p>Create a new account <a asp-area="" asp-page="/SignUp">here.</a></p>
</div>
